{
    "manifest_version": 3,
    "name": "AssetFinder",
    "description": "Powerful browser extension to streamline the process of discovering and managing media files that load onto webpages.",
    "version": "1.0.4",
    "permissions": [
        "webRequest",
        "activeTab",
        "storage"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "./scripts/background.js"
    },
    "action": {
        "default_popup": "popup.html"
    }
}